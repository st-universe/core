    </tr>
    {% include 'html/spacecraft/system/system.twig' with {'name': 'SHIELDS'} %}
    {% include 'html/spacecraft/system/system.twig' with {'name': 'PHASER'} %}
    {% include 'html/spacecraft/system/torpedoAndStorage.twig' %}
