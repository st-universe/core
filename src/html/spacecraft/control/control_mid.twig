        <td>
            {{ _self.fleetAction('B_FLEET_DEACTIVATE_NBS', spacecraftId, 'kss2', 'Nahbereichssensoren deaktivieren') }}
            {{ _self.fleetAction('B_FLEET_DEACTIVATE_SHIELDS', spacecraftId, 'shldac2', 'Schilde deaktivieren') }}
