{% if ISNPC or ISADMIN %}
{% set linkid = 'nav_item_ticks' %}
<div class="navigation_item border_box" onmousedown="if(event.button === 0) { window.location.href='/npc'; }"
    onmouseover="cp('{{ linkid }}','navigation/menu_ticks1', 'png')"
    onmouseout="cp('{{ linkid }}','navigation/menu_ticks0', 'png')">
    <a class="navitem_link" href="/npc">
        <img class="navitem_img" src="/assets/navigation/menu_ticks0.png" id="{{ linkid }}" title="'NPC'" />
        <div class="navitem_title">NPC</div>
    </a>
</div>
{% endif %}
