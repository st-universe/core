<div id="pmComponent" class="header_box header_box_pm border_box">
    {% for key, item in PM %}
    <a href="pm.php?pmcat={{ item.getId }}">
        <div style="width: 30px; height: 100%; margin: 7px 5px 7px 5px; text-align: center; float: left" class="action">
            {% set new_pm_amount = item.getCategoryCountNew %}
            {% if new_pm_amount %}
            <img src="/assets/buttons/pmnavlet_{{ key }}_1.png" width="30" height="30"
                title="{{ item.getDescription }}" />
            <div class="pm_new">{{ new_pm_amount }}</div>
            {% else %}
            <img src="/assets/buttons/pmnavlet_{{ key }}_0.png" width="30" height="30" id="newpm{{ key }}"
                title="{{ item.getDescription }}" onmouseover="cp(this.id,'buttons/pmnavlet_{{ key }}_1', 'png')"
                onmouseout="cp(this.id,'buttons/pmnavlet_{{ key }}_0', 'png')" />
            <div style="margin-top: 5px">0</div>
            {% endif %}
        </div>
    </a>
    {% endfor %}
</div>
