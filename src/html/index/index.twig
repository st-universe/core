{% extends "html/index/indexDefaults.twig" %}

{% block body %}
<div class="d-lg-none">
    {% if USER %}
    <div class="mainbar_box_header mt-4">Willkommen zurück</div>
    <div class="mainbar_box_content">
        {% autoescape false %}
        {{ USER.getName | bbcode }}
        {% endautoescape %}
        <br />
        <a href="/maindesk.php" class="btn-stu btn-stu-d mt-3 mb-2">Zum Maindesk</a>
    </div>
    {% else %}
    <div class="mainbar_box_header mt-4"><small>Star Trek Universe - Login</small></div>
    <div class="mainbar_box_content">
        <div class="p-2">
            {% if LOGIN_ERROR %}
            <div>
                <span style="color: red;">{{ LOGIN_ERROR }}</span>
            </div>
            {% endif %}
            <form action="/index.php" method="post" id="defaultform">
                <div class="form-group mt-2  mb-2">
                    <label for="login">Siedler:
                        <span class="tooltip-container">
                            <span class="info-icon"></span>
                            <div class="tooltip-box">
                                Loginname oder Spieler-ID
                            </div>
                        </span>
                    </label>
                    <input type="text" id="login" class="form-control" name="login" />
                </div>
                <div class="form-group">
                    <label for="pass">Passwort:</label>
                    <input type="password" id="pass" class="form-control" name="pass" />
                </div>
                <div class="registration_box_content text-center mt-4">
                    <button type="submit" name="B_LOGIN" value="Login" class="btn-stu w-100 mt-2">Login</button>
                    <p class="mt-3"></p>
                    <div class="text-center"><a href="/?SHOW_LOST_PASSWORD=1">Passwort vergessen?</a> | <a
                            href="?SHOW_REGISTRATION=1">Registrieren</a></p>
                    </div>
                </div>
            </form>
            <div class="row">
            </div>
        </div>
    </div>
    {% endif %}
</div>

<div class="mainbar_box_header mt-4"><small>Spielstatus</small></div>
<div class="mainbar_box_content">
