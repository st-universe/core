<div class="mainbar_box_content">
    {% if SYSTEM_NEWS %}
    {% for data in SYSTEM_NEWS %}
    <div class="mt-3 ml-3 mr-3 mb-3 p-3 news_box_content">
        <strong>
            {% autoescape false %}
            {{ data.getSubject }}
            {% endautoescape %}
        </strong>
        <div class="mb-3" style="font-size: 80%; color: #686868;">
            vom {{ data.getDate|stuDateTime }}
        </div>
        <p>
            {% autoescape false %}
            {{ data.getText|nl2br }}
            {% endautoescape %}
        </p>
        {% if data.getLinks %}
        <p>
        <div style="font-size: 80%; color: #686868;">Links</div>
        {% for link in data.getLinks %}
        - <a href="{{ link }}" target="_blank">{{ link }}</a><br>
