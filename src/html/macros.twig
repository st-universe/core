{% macro coloniesnavlet(colonies) %}
{% for item in colonies %}
{% if item['type'] == 1 %}
<div style="margin: 7px 5px 7px 5px; text-align: center; float: left" class="action"
    onclick="goToUrl('colony.php?SHOW_COLONY=1&id={{ item.colonyid }}')">
    <img src="assets/planets/{{ item.classid }}.png" title="{{ item.nameandsector|bbcode2txt }}" />
</div>
{% elseif item['type'] == 2 %}
<div style="height: 50px; width: 30px; margin: 7px 5px 7px 5px; text-align: center; float: left" class="action"
    onclick="goToUrl('colony.php?SHOW_COLONY=1&id={{ item.colonyid }}')">
    <img src="assets/planets/{{ item.classid }}.png" title="{{ item.nameandsector|bbcode2txt }}"
        style="position:relative; margin-top: 10px;" />
</div>
{% else %}
<div style="height: 50px; width: 40px; margin: 7px 5px 7px 5px; text-align: center; float: left" class="action"
    onclick="goToUrl('colony.php?SHOW_COLONY=1&id={{ item.colonyid }}')">
    <img src="assets/planets/{{ item.classid }}.png" title="{{ item.nameandsector|bbcode2txt }}"
        style="position:relative; margin-top: 10px;" />
</div>
{% endif %}
{% endfor %}
{% endmacro %}
