                                <div style="width: 25px; height: 25px;">
                                    <img src="/assets/avatars/{{ user.getId }}_small.png"
                                        style="width: 25px; height: 25px;" />
                                </div>
                                <div>{{ user.getName|bbcode }}</div>
                                <div class="allianceMemberButtons">
                                    <img src="/assets/rassen/{{ user.getFactionId }}s.png" />
                                </div>
                                <div class="{{ user.isOnline ? 'online' : 'offline' }}"> </div>
                            </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}

                    <div class="box">
                        <div class="box_title">Aktionen</div>
                        <div class="box_body">
                            <form method="post" action="/npc/index.php" style="margin-bottom: 10px;">
                                <input type="hidden" name="sstr" value="{{ SESSIONSTRING }}" />
                                <input type="hidden" name="quest_id" value="{{ quest.getId }}" />
                                <strong>User einladen:</strong><br>
                                <input type="text" name="user_ids" placeholder="User IDs (kommagetrennt)"
                                    style="width: 300px; margin-top: 5px;" />
                                <input type="submit" name="B_INVITE_QUEST_USERS" value="Einladen" class="button" />
                            </form>

                            <form method="post" action="/npc/index.php">
                                <input type="hidden" name="sstr" value="{{ SESSIONSTRING }}" />
                                <input type="hidden" name="quest_id" value="{{ quest.getId }}" />
                                <strong>User ausschließen:</strong><br>
                                <input type="text" name="user_ids" placeholder="User IDs (kommagetrennt)"
                                    style="width: 300px; margin-top: 5px;" />
                                <input type="submit" name="B_EXCLUDE_QUEST_USERS" value="Ausschließen" class="button" />
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        {% endfor %}
        {% else %}
        <div style="text-align: center; padding: 20px; color: #666;">
            Keine aktiven eigenen Quests vorhanden
        </div>
        {% endif %}
    </div>

    <br>

