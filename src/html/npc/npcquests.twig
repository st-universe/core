                        <img src="/assets/buttons/bauplan.png" title="Unbekannter Bauplan" /> ID {{ buildplanId }}
                        {% endif %}
                        <br>
                        {% endfor %}
                        {% endif %}

                        {% if quest.getAwardId %}
                        Award ID: {{ quest.getAwardId }}<br>
                        {% endif %}
                        <br>
                        {% endif %}

                        {% if quest.getFactions %}
