                        {% for factionId in quest.getFactions %}
                        {% for faction in PLAYABLE_FACTIONS %}
                        {% if faction.getId == factionId %}
                        {{ faction.getName }}<br>
                        {% endif %}
                        {% endfor %}
                        {% endfor %}
                        <br>
                        {% endif %}

                        {% if quest.getSecret %}
                        <strong>Geheim für Fraktionen:</strong><br>
                        {% for factionId in quest.getSecret %}
                        {% for faction in PLAYABLE_FACTIONS %}
                        {% if faction.getId == factionId %}
                        {{ faction.getName }}<br>
                        {% endif %}
                        {% endfor %}
                        {% endfor %}
                        {% endif %}
