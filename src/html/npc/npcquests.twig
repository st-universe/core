                    <div class="box" style="margin-bottom: 10px;">
                        <div class="box_title">Eingeladen ({{ invited|length }})</div>
                        <div class="box_body">
                            {% for questUser in invited %}
                            {% set user = questUser.getUser %}
                            {% if user %}
