{% set user = USER_DETAILS.getUser %}
{% set userId = user.getId %}

<div style="display: grid; grid-template-columns: 300px 1fr 1fr; width: 100%; margin-top: 5px;">
    <div>
        <div>
            <img title="Zuletzt online" src="/assets/buttons/time.png" />
            {{ user.getLastAction|stuDateTime }}
        </div>
        <div>
            <img src="/assets/navigation/menu_ships0.png" height="20" width="20" title="Crew auf Schiffen/Stationen" />
            <span>{{ USER_DETAILS.getCrewOnShips }}</span> / <span>{{ USER_DETAILS.getCrewLimit }}</span>
            <img src="/assets/bev/bev_free_5_1.png" height="20" width="20" title="globales Crewlimit" />
        </div>
        <div>STATUS:
            <span style="color: {{ USER_DETAILS.getUserStateColor }};">{{ USER_DETAILS.getUserStateDescription }}</span>
        </div>
    </div>

    <div style="display: flex; flex-wrap: wrap; align-items: center;">
        {% if USER_DETAILS.getColonies|length > 0 %}
        {% for col in USER_DETAILS.getColonies %}
        {% set classId = col.getColonyClass.getId %}
        {% set title = col.getName|bbcode2txt %}
        {% set system = col.getSystem %}

        <img src="/assets/planets/{{ classId }}.png"
            title="Kolonieinformationen: {{ title }}&#10;Koordinaten: {{ col.getSx }}|{{ col.getSy }}&#10;System: {{ system.getName|bbcode2txt }}-System ({{ system.getCx }}|{{ system.getCy }})"
            style="margin: 2px;" />
        {% endfor %}
        {% else %}
        <div>Keine Kolonien</div>
        {% endif %}
    </div>

    <div style="display: flex; flex-wrap: wrap;">
        {% if USER_DETAILS.getShipRumpList|length > 0 %}
        {% for rump in USER_DETAILS.getShipRumpList %}
        <div style="display: inline-block; text-align: center; margin: 2px;">
            {{ rump.amount }} {{ rump.name }}<br />
            <a href="javascript:void(0);" onclick="showNPCMemberRumpInfo(this, {{ userId }}, {{ rump.rump_id }});">
                <img src="/assets/ships/{{ rump.rump_id }}.png" title="{{ rump.name }} (Klick fÃ¼r Details)" />
            </a>
        </div>
        {% endfor %}
        {% else %}
        <div>Keine Schiffe</div>
        {% endif %}
    </div>
</div>