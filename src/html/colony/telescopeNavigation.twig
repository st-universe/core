<div id="elt">
    <div style="float: left"
        onmouseout="$('needed_energy').innerHTML = '?'; $('needed_energy').style.color = '#dddddd';">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    {% include 'html/colony/telescopeSectionTable.twig' %}
                </td>
            </tr>
        </table>
    </div>
    <div style="margin-left: 10px; width: 100px; float: left">
        <table class="tcal">
            <tr>
                <th colspan="3">Navigation</th>
            </tr>
            <tr>
                <td style="text-align: center" colspan="3">
                    <a id="navup" href="javascript:void(0)" onclick="refreshMapSection(4, false);"
                        style="display: block;">/\</a>
                </td>
            </tr>
            <tr>
                <td style="width: 33%;">
                    <a id="navleft" href="javascript:void(0)" onclick="refreshMapSection(1, false);"
                        style="display: block;">&lt;</a>
                </td>
                <td style="width: 33%; text-align: center;">{{ SECTION_ID }}</td>
                <td style="width: 33%; text-align: right;">
                    <a id="navright" href="javascript:void(0)" onclick="refreshMapSection(3, false);"
                        style="display: block;">&gt;</a>
                </td>
            </tr>
            <tr>
                <td style="text-align: center" colspan="3">
                    <a id="navdown" href="javascript:void(0)" onclick="refreshMapSection(2, false);"
                        style="display: block;">\/</a>
                </td>
            </tr>
        </table>
    </div>
</div>
