<table class="tcal">
    <tr>
        <td style="vertical-align: middle;">Menge</td>
        <td>
            <input type="text" name="count" size="5" />
            ({{ STOR.getAmount }})
        </td>
    </tr>
    <tr>
        <td>Transferkapazit√§t</td>
        <td>{{ TRADE_POST.getFreeTransferCapacity }}</td>
    </tr>
</table>
<br />
<table class="tcal">
    <tr>
        <th colspan="3">Zielposten</th>
    </tr>
    {% for post in AVAILABLE_TRADE_POSTS %}
    <tr>
        <td>
            <input type="radio" name="target" value="{{ post.getTradePost.getId }}"
                readonly="{{ post.getFreeStorage }}" />
        </td>
        <td colspan="2">
            {{ post.getTradePost.getName|bbcode }}
        </td>
        <td>
            <img src="assets/buttons/lager.png" title="Freier Lagerraum" />
            {{ post.getFreeStorage }}
        </td>
    </tr>
    {% endfor %}
</table>
<br />
<div style="width: 100%; text-align: center;">
    <input type="submit" value="Transferieren" name="B_TRANSFER" />
</div>
