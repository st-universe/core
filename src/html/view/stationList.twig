{% from 'html/shiplistmacros.twig' import shiplist_header, shiplist_body %}
{% if STATIONS %}
<table class="tcal">
    <tr>
        <td colspan="11">Stationen</td>
    </tr>
    {% set isFleetHeader = false %}
    {{ shiplist_header(isFleetHeader)}}
    {% for wrapper in STATIONS %}
    {{ shiplist_body(wrapper) }}
    {% endfor %}
</table>
{% else %}
<table class="tcal">
    <tr>
        <th>Meldung</th>
    </tr>
    <tr>
        <td>Du besitzt derzeit keine Stationen</td>
    </tr>
</table>
{% endif %}