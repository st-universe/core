{% block body %}
    <form action="alliance.php" method="post">
        <input type="hidden" name="B_EDIT_POSTING" value="1" />
        <input type="hidden" name="sstr" value="{{ sessionString }}" />
        <input type="hidden" name="pid" value="{{ POST.getId }}" />
        <input type="hidden" name="tid" value="{{ POST.getTopic.getId }}" />
        <table class="tcal">
            <tr>
                <th>Text</th>
            </tr>
            <tr>
                <td><textarea name="text" style="width: 100%; height: 300px;">{{ POST.getText|raw }}</textarea></td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="B_EDIT_POSTING" value="Editieren" />
                </td>
            </tr>
        </table>
    </form>
{% endblock %}
