{% block body %}
<div id="popup-drag" style="padding: 5px; text-align: center; font-weight: bold; cursor: grab;">
    {{ RELATION.getType.getDescription }} zwischen
    <br>{{ RELATION.getAlliance.getName|bbcode }} <br>und<br>{{
    RELATION.getOpponent.getName|bbcode }}
    <br> bearbeiten
</div>
<div style="padding: 10px;">
    <form action="alliance.php" method="post" onsubmit="closeAjaxWindow();">
        <input type="hidden" name="B_EDIT_RELATION_TEXT" value="1" />
        <input type="hidden" name="sstr" value="{{ SESSIONSTRING }}" />
        <input type="hidden" name="relationid" value="{{ RELATION.getId }}" />

        <table class="tcal">
            <tr>
                <th>Vertragstext</th>
            </tr>
            <tr>
                <td>
                    <textarea name="text"
                        style="width: 100%; height: 300px; font-family: Arial, sans-serif;">{{ RELATION.getText|raw }}</textarea>
                </td>
            </tr>
            <tr>
                <td style="text-align: center; padding: 10px;">
                    {% if RELATION.getLastEdited %}
                    <div style="font-size: 90%; color: #888; margin-bottom: 10px;">
                        Zuletzt bearbeitet: {{ RELATION.getLastEdited|stuDateTime }}
                    </div>
                    {% endif %}
                    <input type="submit" value="Speichern" class="linkbutton" style="margin-right: 10px;" />
                    <input type="button" value="Abbrechen" class="linkbutton" onclick="closeAjaxWindow();" />
                </td>
            </tr>
        </table>
    </form>
</div>
{% endblock %}