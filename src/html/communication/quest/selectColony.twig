<div class="box">
    <div class="box_title">Kolonie für Belohnungsempfang wählen</div>
    <div class="box_body">
        {% if QUEST_ID is not defined or COLONIES is not defined %}
        <div style="padding: 20px; text-align: center; color: #999;">Fehler beim Laden der Kolonie-Auswahl</div>
        {% else %}
        <div style="margin-bottom: 15px; color: #999; font-size: 90%; text-align: center;">
            Wähle eine Kolonie aus, zu der die Schiffe und Waren geliefert werden sollen.
        </div>

        <form id="colonySelectionForm">
            <input type="hidden" name="questid" value="{{ QUEST_ID }}" />
            <input type="hidden" name="sstr" value="{{ SESSIONSTRING }}" />
            <input type="hidden" id="selected_colony_id" name="colonyid" value="" />

            <div style="max-height: 400px; overflow-y: auto; margin-bottom: 15px;">
                {% for colony in COLONIES %}
                <div class="colony-select-item list" data-colony-id="{{ colony.getId }}"
                    onclick="selectColony({{ colony.getId }})"
                    style="padding: 10px; margin-bottom: 5px; cursor: pointer; border: 1px solid #262323;">
                    <div style="display: grid; grid-template-columns: auto 50px; align-items: center;">
                        <div>
                            <div style="font-weight: bold;">{{ colony.getName|bbcode }}</div>
                            <div style="font-size: 90%; color: #999;">{{ colony.getPlanetName }} ({{
                                colony.getSectorString }})</div>
                        </div>
                        <div style="text-align: right;">
                            <img src="/assets/planets/{{ colony.getColonyClass.getId }}.png"
                                style="width: 40px; height: 40px;" title="{{ colony.getColonyClass.getName }}" />
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div style="text-align: center; margin-top: 15px;">
                <input type="button" class="button" value="Belohnung erhalten" onclick="claimQuestReward()"
                    id="claim_button" disabled />
                <input type="button" class="button" value="Abbrechen" onclick="hidePopup()" />
            </div>
        </form>
        {% endif %}
    </div>
</div>