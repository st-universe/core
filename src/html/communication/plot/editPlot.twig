{% block body %}
    <script src="{{ javascriptPath }}/js/comm.js"></script>
    <form action="comm.php" method="post">
        <input type="hidden" name="SHOW_EDIT_PLOT" value="1" />
        <input type="hidden" name="plotid" value="{{ PLOT.getId }}" />
        <table class="tcal">
            <tr>
                <th>Titel</th>
            </tr>
            <tr>
                <td><input type="text" name="title" style="width: 100%;" value="{{ PLOT.getTitle|raw }}" /></td>
            </tr>
            <tr>
                <th>Beschreibung</th>
            </tr>
            <tr>
                <td>
                    <textarea name="description" style="width: 100%; height: 300px;">{{ PLOT.getDescription|raw }}</textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="B_EDIT_PLOT" value="Editieren" />
                </td>
            </tr>
        </table>
    </form>
{% endblock %}
