{# needs following variables: HEAD_ROW, MAP_FIELDS, NAV_UP, NAV_LEFT, NAV_RIGHT, NAV_DOWN ) #}

<div id="map_section_nav">
    <div style="float: left">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td>
                    <table class="use">
                        <tr>
                            <th>x|y</th>
                            {% for head in HEAD_ROW %}
                            <th>{{ head }}</th>
                            {% endfor %}
                        </tr>
                        {% for yrow in MAP_FIELDS %}
                        <tr>
                            <th>{{ yrow.getRow }}</th>
                            {% for data in yrow.getFields %}
                            <td class="starmap" style="{{ data.getFieldStyle }}" id="{{ data.getCX }}_{{ data.getCY }}">
                                {% if data.getIcon %}
                                <div title="{{ data.getTitle }}" class="starmapInner" style="cursor: auto ! important;">
                                    {% if data.getHref %}
                                    <a href="{{ data.getHref }}">
                                        <img src="/assets/map/{{ data.getIcon }}.png"
                                            style=" height: 28px; width: 28px;" />
                                    </a>
                                    {% else %}
                                    <img src="/assets/map/{{ data.getIcon }}.png" style="height: 28px; width: 28px;" />
                                    {% endif %}
                                </div>
                                {% else %}
                                {% if data.getTitle %}
                                <div title="{{ data.getTitle }}" class="starmapInner" style="cursor: auto ! important;">
                                    &nbsp;
                                </div>
                                {% else %}
                                <div class="starmapInner" style="cursor: auto ! important;">&nbsp;
                                </div>
                                {% endif %}
                                {% endif %}
                            </td>
                            {% endfor %}
                        </tr>
                        {% endfor %}
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <div style="margin-left: 10px; width: 100px; float: left">
        <table class="tcal">
            <tr>
                <td style="text-align: center" colspan="3">
                    {% if NAV_UP %}
                    <a href="javascript:void(0)" onclick="refreshMapSectionNav('{{ NAV_UP }}');"
                        style="display: block;">/\</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>
                    {% if NAV_LEFT %}
                    <a href="javascript:void(0)" onclick="refreshMapSectionNav('{{ NAV_LEFT }}');"
                        style="display: block;">&lt;</a>
                    {% endif %}
                </td>
                <td style="text-align: center;">{{ SECTION_ID }}</td>
                <td style="text-align: right;">
                    {% if NAV_RIGHT %}
                    <a href="javascript:void(0)" onclick="refreshMapSectionNav('{{ NAV_RIGHT }}');"
                        style="display: block;">&gt;</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td style="text-align: center" colspan="3">
                    {% if NAV_DOWN %}
                    <a href="javascript:void(0)" onclick="refreshMapSectionNav('{{ NAV_DOWN }}');"
                        style="display: block;">\/</a>
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>
</div>
