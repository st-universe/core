{% macro breadcrumb() %}
<div class="box">
  <div class="box_title" style="text-align: left">/
    {% for key, item in GAME.getNavigation %}
    <a href="#" href="{{ key }}">
      {% autoescape false %}
      {{ item|bbcode2txt }}
      {% endautoescape %}</a>
    {% if not loop.last %}
    <span> / </span>
    {% endif %}
    {% endfor %}
  </div>
</div>
<br />
{% if GAME.getInformation %}
{{ _self.systeminformation() }}
{% endif %}
{{ _self.achievements() }}
{% if not GAME.getInformation %}
<div id="result" style="display: none;">..</div>
{% endif %}
{% endmacro %}

{% macro systeminformation() %}
{% if GAME.getExecuteJS %}
<script language="Javascript">
  {% for item in GAME.getExecuteJS %}
  { { item } }
  {% endfor %}
</script>
{% endif %}
<div id="result">
  <table class="use">
    <tr>
      <th>Meldung</th>
    </tr>
    <tr>
      <td>
        {% for notification in GAME.getInformation %}
        <div>
          {% autoescape false %}
          {{ notification.getText|bbcode }}
          {% endautoescape %}
        </div>
        {% endfor %}
        {% for notification in GAME.getInformation %}
        {% if notification.getLink %}
        <a href="{{ notification.getLink }}" class="linkbutton">
          Zum Schiff wechseln
        </a>
        {% endif %}
        {% endfor %}
      </td>
    </tr>
  </table>
</div>
<br />
{% endmacro %}

{% macro achievements() %}
{% if GAME.getAchievements %}
<script type="text/Javascript" defer="defer">
  {% for achievement in GAME.getAchievements %}
  showAchievement('{{ achievement|jsquote }}');
  {% endfor %}
</script>
{% endif %}
{% endmacro %}
