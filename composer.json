{
  "name": "st-universe/core",
  "description": "ST-Universe Browsergame Source Code",
  "license": "MIT",
  "autoload": {
    "classmap": [
      "src/Lib",
      "src/admin",
      "tests/",
      "testdata/"
    ],
    "psr-4": {
      "Stu\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Stu\\": [
        "tests/"
      ]
    }
  },
  "require": {
    "php": "^8.5",
    "ext-dom": "*",
    "ext-gd": "*",
    "ext-gettext": "*",
    "ext-iconv": "*",
    "ext-imagick": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-pcntl": "*",
    "ext-pdo_sqlite": "*",
    "ext-redis": "*",
    "ext-sockets": "*",
    "ext-sysvsem": "*",
    "ext-xsl": "*",
    "adhocore/cli": "^1",
    "amenadiel/jpgraph": "^4",
    "cache/array-adapter": "^1.0",
    "cache/redis-adapter": "^1.0",
    "crell/tukio": "^2",
    "crunzphp/crunz": "^3.4",
    "cweagans/composer-patches": "^2.0",
    "devster/ubench": "^2",
    "doctrine/migrations": "^3.8",
    "doctrine/orm": "^3.0",
    "doctrine/persistence": "^4.0",
    "filp/whoops": "^2.5",
    "friendsofphp/proxy-manager-lts": "^1.0",
    "graphp/graphviz": "^0.2.1",
    "hackzilla/password-generator": "^1.4",
    "hassankhan/config": "^3",
    "jbbcode/jbbcode": "^1.4",
    "json-mapper/json-mapper": "^2.14",
    "mnsami/composer-custom-directory-installer": "^2",
    "monolog/monolog": "^3",
    "mpscholten/request-parser": "^1.5",
    "php-di/php-di": "^7",
    "sebastian/diff": "^8.0",
    "st-universe/planet-generator": "dev-master",
    "st-universe/starsystem-generator": "dev-master",
    "symfony/mailer": "^8.0.0",
    "twig/twig": "^3.6"
  },
  "require-dev": {
    "bnf/phpstan-psr-container": "^1.0",
    "carthage-software/mago": "^1.0.0-beta.34",
    "enlightn/security-checker": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.13",
    "mikey179/vfsstream": "1.6.12",
    "mockery/mockery": "^1.1",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-doctrine": "^2.0",
    "phpstan/phpstan-mockery": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpunit/phpunit": "^12",
    "rector/rector": "^2.0",
    "spatie/phpunit-snapshot-assertions": "^5.1"
  },
  "extra": {
    "patches": {
       "jbbcode/jbbcode": {
          "Fix PHP 8.4 deprecated implicit nullable": "patches/jbbcode-parser-nullable.patch"
       }
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "allow-plugins": {
      "carthage-software/mago": true,
      "cweagans/composer-patches": true,
      "mnsami/composer-custom-directory-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/st-universe/planet-generator.git"
    },
    {
      "type": "git",
      "url": "https://github.com/st-universe/starsystem-generator.git"
    }
  ],
  "scripts": {
    "dev:tests": "@php -d xdebug.mode=off vendor/bin/phpunit -c phpunit.xml --colors=always tests -d --update-snapshots",
    "dev:serve": "@php -S localhost:1337 -d xdebug.mode=off -t src/Public/ router.php",
    "dev:serve-debug": "@php -S localhost:1337 -t src/Public/ router.php",
    "mago:analyze": "@php -d xdebug.mode=off vendor/bin/mago analyze --fix --fmt",
    "unittests": "@php vendor/bin/phpunit --testsuite 'STU unit'",
    "integrationtests": "@php vendor/bin/phpunit --testsuite 'STU integration'",
    "stan": "phpstan",
    "rector:dry": "rector process -n",
    "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html build/coverage tests",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "security:check": "@php vendor/bin/security-checker security:check ./composer.lock",
    "qa": [
      "@composer qaStage1",
      "@composer qaStage2"
    ],
    "qaStage1": [
      "@composer unittests",
      "@composer stan",
      "@composer security:check"
    ],
    "qaStage2": [
      "@composer integrationtests"
    ],
    "gen:assets": [
      "@php src/Public/assets/generator/building_generator/gen.php",
      "@php src/Public/assets/generator/field_generator/generator.php"
    ],
    "gen:baseline": [
      "phpstan --generate-baseline"
    ]
  },
  "scripts-descriptions": {
    "qa": "Executes all qa related actions",
    "qaStage1": "Executes basic qa related actions",
    "qaStage2": "Executes integrative qa related actions",
    "gen:assets": "Generates asset images",
    "gen:baseline": "Generates the phpstan baseline"
  }
}
