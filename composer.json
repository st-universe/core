{
  "name": "st-universe/core",
  "description": "ST-Universe Browsergame Source Code",
  "license": "MIT",
  "autoload": {
    "classmap": [
      "src/Lib",
      "src/admin",
      "tests/"
    ],
    "psr-4": {
      "Stu\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Stu\\": [
        "tests/"
      ]
    }
  },
  "require": {
    "php": "^7.4 || 8.0",
    "ext-dom": "*",
    "ext-gd": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-pcntl": "*",
    "ext-redis": "*",
    "ext-sockets": "*",
    "ext-sysvsem": "*",
    "ext-xsl": "*",
    "adhocore/cli": "^0.9.1",
    "amenadiel/jpgraph": "^4",
    "cache/array-adapter": "^1.0",
    "cache/psr-6-doctrine-bridge": "^3.0",
    "cache/redis-adapter": "^1.0",
    "crunzphp/crunz": "^3.4",
    "devster/ubench": "^2",
    "doctrine/annotations": "^1",
    "doctrine/orm": "^2.6",
    "filp/whoops": "^2.5",
    "graphp/graphviz": "^0.2.1",
    "hackzilla/password-generator": "^1.4",
    "hassankhan/config": "^3",
    "jbbcode/jbbcode": "^1.3",
    "json-mapper/json-mapper": "^2.14",
    "laminas/laminas-mail": "^2",
    "mnsami/composer-custom-directory-installer": "^2",
    "monolog/monolog": "^2.0",
    "mpscholten/request-parser": "^1.5",
    "php-di/php-di": "^6",
    "scn/phptal": "^3",
    "slim/http": "^1.2",
    "slim/slim": "^4.2",
    "st-universe/planet-generator": "dev-master",
    "st-universe/starsystem-generator": "dev-master"
  },
  "require-dev": {
    "bnf/phpstan-psr-container": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.13",
    "mikey179/vfsstream": "1.6.11",
    "mockery/mockery": "^1.1",
    "phpstan/extension-installer": "^1.2",
    "phpstan/phpstan": "^1.9",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-mockery": "^1.1",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpunit/phpunit": "^9",
    "rector/rector": "^0.15.10",
    "st-universe/assets": "dev-master"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true,
    "allow-plugins": {
      "mnsami/composer-custom-directory-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "tests": "@php vendor/bin/phpunit tests",
    "stan": "phpstan",
    "rector:dry": "rector process -n",
    "coverage": "phpunit --warm-coverage-cache tests && XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html build/coverage tests",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "qa": [
      "@composer tests",
      "@composer stan"
    ],
    "gen:assets": [
      "@php src/Public/assets/generator/building_generator/gen.php",
      "@php src/Public/assets/generator/field_generator/generator.php"
    ]
  },
  "scripts-descriptions": {
    "qa": "Executes alle qa related action",
    "gen:assets": "Generates asset images"
  },
  "extra": {
    "installer-paths": {
      "./src/Public/assets": [
        "st-universe/assets"
      ]
    }
  }
}
